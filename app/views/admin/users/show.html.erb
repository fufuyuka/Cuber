<div class='container p-2'>
  <div class='row justify-content-center my-3'>
    <h4 class='col-3 text-center'>ユーザーの詳細</h4>
    <div class='col-1'>
      <%= link_to "編集", edit_admin_user_path(@user), class:'btn btn-warning' %>
    </div>
  </div>
  
  <div class='row justify-content-center'>
    <div class='col-3 text-center'>
    <%= link_to admin_user_path(@user) do %>
      <%= image_tag @user.get_profile_image, size:'100x100' %>
      <div class='my-2'>
        <%= @user.name %>
      </div>
    <% end %>

      <div class='my-3'>
        <%= link_to "投稿一覧", admin_posts_path(@user) %>
      </div>
      <div class='mb-5'>
        <%= link_to "コメント一覧", admin_post_comments_path(@user) %>
      </div>
    </div>
    
    <div class='col-8'>
      <table class='teble table-bordered'>
        <tr>
          <td class='table-secondary'>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class='table-secondary'>プロフィール</td>
          <td><%= @user.profiles %></td>
        </tr>
        <tr>
          <td class='table-secondary'>総いいね数</td>
          <td><%#= @user.total_favorites %></td>
        </tr>
        <tr>
          <td class='table-secondary'>投稿数</td>
          <td><%= @user.posts.count %></td>
        </tr>
        <tr>
          <td class='table-secondary'>コメント数</td>
          <td><%= @user.post_comments.count %></td>
        </tr>
        <tr>
          <td class='table-secondary'>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class='table-secondary'>ユーザーステータス</td>
          <td><%= @user.user_status_i18n %></td>
        </tr>
        <tr>
          <td class='table-secondary'>登録日</td>
          <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </table>
    </div>
    
  </div>
  
</div>
