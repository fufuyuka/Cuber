<div class='container p-2'>
  <div class='row justify-content-center my-3'>
    <h4 class='col-3 text-center'>ユーザーの詳細</h4>
    <div class='col-1'>
      <%= link_to "編集", edit_admin_user_path(@user), class:'btn btn-warning' %>
    </div>
  </div>
  
  <div class='row justify-content-center'>
    <!--詳細・投稿・コメントの切り替え-->
    <%= render 'admin/users/info', user: @user %>
    
    <div class='col-8'>
      <div class='row mb-4'>
        <table class='table col-10 table-bordered table-hover' style='table-layout:fixed;'>
          <tr>
            <td class='col-3 py-2 table-secondary'>ユーザー名</td>
            <td class='col-6'><%= @user.name %></td>
          </tr>
          <tr>
            <td class='col-3 py-5 table-secondary'>プロフィール</td>
            <td class='col-6' style="word-wrap: break-word;"><%= @user.profiles %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>総いいね数</td>
            <td class='col-6'><%= Favorite.total_favorites(@user) %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>投稿数</td>
            <td class='col-6'><%= @user.posts.count %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>コメント数</td>
            <td class='col-6'><%= @user.post_comments.count %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>メールアドレス</td>
            <td class='col-6'><%= @user.email %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>ユーザーステータス</td>
            <td class='col-6'><%= @user.user_status_i18n %></td>
          </tr>
          <tr>
            <td class='col-3 py-2 table-secondary'>登録日</td>
            <td class='col-6'><%= @user.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        </table>
      </div>
    </div>

  </div>
</div>
