<div class='container my-5'>
  <div class='row justify-content-center'>
    <div class="col-5">
    <%= form_with model: @user, url: admin_user_path, method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :アイコン画像 %>
        <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィール %>
        <%= f.text_area :profiles, class: "form-control profiles", size:'30x4' %>
      </div>
      <div class="form-group">
        <%= f.label :ユーザーステータス %>
        <%= f.select :user_status, User.user_statuses.keys.map {|k| [I18n.t("enums.user.user_status.#{k}"), k]}, class: "form-control user_status" %>
      </div>
      <div class="form-group text-center">
        <%= link_to "戻る", admin_user_path, class:'btn btn-outline-secondary px-5 mb-2 mr-3' %>
        <%= f.submit "更新", data: { confirm: "本当に更新しますか？" }, class:'btn btn-info px-5 mb-2' %>
      </div>
    <% end %>
  </div>
</div>
