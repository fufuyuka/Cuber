<div class='container'>
  <div class='row justify-content-center mt-5'>
    <h2>ログイン</h2>
  </div>
  <%= flash[:notice] %>

  <%= form_with model: @user, url: user_session_path do |f| %>
  <div class='row justify-content-center py-4'>
    <i class="fas fa-envelope"></i>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class='row justify-content-center'>
    <i class="fas fa-lock"></i>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

    <% if devise_mapping.rememberable? %>
      <div class='row justify-content-center'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class='row justify-content-center my-3'>
      <%= f.submit "ログイン", class:'btn btn-outline-info mb-4 px-5' %>
    </div>
  <% end %>

  <div class='row justify-content-center p-3 border-top'>
    <div class='col m-auto text-center'>
      <p>アカウントをお持ちでない方はこちらから<br>
      <%= render "public/shared/links" %></p>
    </div>
  </div>
  
</div>
