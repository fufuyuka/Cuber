<div class='container py-2'>
  <div class='row'>
    <!--user-info-->
    <%= render 'public/user/info', user: current_user %>
    
    <div class='col-8 offset-1'>
    <!--user詳細-->
    <%= render 'public/user/profiles/ditail', user: current_user %>
    
      <!--userブックマーク一覧-->
      <% @bookmarked_posts.each do |bookmarked_post| %>
      <div class='row my-3'>
        <div class='col-1 border-bottom'>
        <%= link_to user_path(bookmarked_post.user) do %>
          <%= image_tag bookmarked_post.user.get_profile_image, size:"50x50" %>
        </div>  
        <div class='col-8 border-bottom'>
          <div class='row m-auto'>
            <div class='col-6 text-left'>
            <%= bookmarked_post.user.name %>
        <% end %>
            </div>
            <div class='col-6 text-right'>
          <%= link_to user_path(bookmarked_post.user) do %>
            <% if bookmarked_post.puzzle_category_id.present? %>
              <%= bookmarked_post.puzzle_category.category %>
            <% end %>
          <% end %>
            </div>
          </div>
          
          <div class='row ml-3 mb-2'>
          <%= link_to post_path(bookmarked_post), class:'text-dark text-decoration-none' do %>
            <%= bookmarked_post.statement %>
          <% end %>
          </div>
        
          <!--いいね,コメント,ブックマーク,削除-->
          <div class='row d-flex justify-content-end'>
            <p class='mx-3'>
            <% if bookmarked_post.favorited_by?(current_user) %>
              <%= link_to post_favorites_path(bookmarked_post), method: :delete do %>
                <i class="fas fa-heart text-danger"></i><%= bookmarked_post.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to post_favorites_path(bookmarked_post), method: :post do %>
                <i class="far fa-heart text-secondary"></i><%= bookmarked_post.favorites.count %>
              <% end %>
            <% end %>
            </p>
            <p class='mx-3'>
              <i class="far fa-comment-dots"></i><%= bookmarked_post.post_comments.count %>
            </p>
            <p class='mx-3'>
            <% if bookmarked_post.bookmarked_by?(current_user) %>
              <%= link_to post_bookmarks_path(bookmarked_post), method: :delete, data: { confirm: 'ブックマークを取り消しますか？' } do %>
                <i class="fas fa-cube text-primary"></i>
              <% end %>
            <% else %>
              <%= link_to post_bookmarks_path(bookmarked_post), method: :post do %>
                <i class="fas fa-cube text-secondary"></i>
              <% end %>
            <% end %>
            </p>
            <p class='ml-3'>
            <% if bookmarked_post.user == current_user %>
              <%= link_to post_path(bookmarked_post), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                <i class="fas fa-times text-dark"></i>
              <% end %>
            <% end %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
      
      <div>
        <%#= render 'public/posts/list', posts: @bookmarked_posts %>
      </div>
      
    </div>
    
  </div>
</div>