<div class='container my-5'>
  <div class='row justify-content-center'>
    <div class="col-5">
    <%= form_with model: @user, url: user_profiles_path, method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :アイコン画像 %>
        <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :プロフィール %>
        <%= f.text_area :profiles, class: "form-control profiles" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "更新", class:'btn btn-info px-5 mb-2' %>
      </div>
    <% end %>
  </div>
</div>
