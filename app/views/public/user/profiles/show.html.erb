<div class='container px-5'>
  <div class='row'>
    <!--user-info-->
    <%= render 'public/user/info', user: @user %>
    
    <!--user詳細-->
    <div class='col-6 offset-1 py-5'>
      <h4><%= @user.name %></h4>
      <div class='d-flex justify-content-end'>
        <% if @user == current_user %>
          <%= link_to "編集", edit_user_profiles_path, class:'btn btn-info ml-5' %>
        <% end %>
      </div>
      <p class='mb-5'><%= @user.profiles %></p>
    
      <!--user投稿一覧-->
      <%= render 'public/posts/list', posts: @posts %>
    </div>
    
  </div>
</div>
