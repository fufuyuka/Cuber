<div class='container px-5'>
  <div class='row justify-content-center mt-3'>
    <!--検索フォーム-->
    <div>
    <%= form_with url: top_searches_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "気になるワード" %>
      <%= f.submit "検索" %>
    <% end %>
    </div>
  </div>
    
  <!--検索結果-->
  <% if @posts.present? %>
    <div class='row my-4 justify-content-center'>
      <div class='col-sm-10 col-md-5 mx-3 mb-5'>
      <h4 class='text-center'>投稿に"<%= @word %>"を含む検索結果</h4>
      <%= render 'public/homes/posts_list', posts: @posts %>
    </div>
  <% else %>
    <p class="text-center p-4">一致するものはありませんでした</p>
  <% end %>
</div>
