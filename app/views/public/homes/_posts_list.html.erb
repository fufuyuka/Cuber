<% posts.each do |post| %>
  <%= link_to new_user_session_path, class:'text-dark text-decoration-none' do %>
  <div class='row mt-3 mb-2'>
    <div class='col-2 border-bottom'>
      <%= image_tag post.user.get_profile_image, size:"50x50" %>
    </div>
    <div class='col-10 px-1 border-bottom'>
      <%= post.user.name %>
      <div class='my-1'>
        <%= post.statement %>
      </div>
      <div class='row m-auto'>
        <div class='col-6 text-left text-secondary m-auto'>
         <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
        <div class='col-6 d-flex justify-content-end pr-1'>
          <p class='m-2'><i class="fas fa-heart text-danger"></i><%= post.favorites.count %></p>
          <p class='m-2'><i class="far fa-comment-dots"></i><%= post.post_comments.count %></p>
          <p class='m-2'><i class="fas fa-cube text-primary"></i>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
